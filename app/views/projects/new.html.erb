<h2>Новый проект</h2>
<div class="row">
  <div class="span9" id="content">
    <div id="content-block">
      <%= form_for(@project) do |f| %>
          <div class="control-group">
            <%= f.label :name, class:'control-label' %>
            <div class="controls">
              <%= f.text_field :name %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :description, class:'control-label' %>
            <div class="controls">
              <%= f.text_area :description %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :parent, class:'control-label' %>
            <div class="controls">
              <%= f.select :parent_id, @projects.pluck(:name, :id), { include_blank: true } %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= f.submit 'Сохранить' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>