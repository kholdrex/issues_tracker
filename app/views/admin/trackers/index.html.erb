<h2><%= t(:trackers) %></h2>
<div class="row">
  <div class="span9">

    <div id="content-block">
      <div class="btn-group" id="right">
        <%= link_to t(:create_tracker), new_admin_tracker_path, class: 'btn btn-success' %>
      </div>
      <table class="table table-hover">
        <tr><th><%= t(:name) %></th><th></th></tr>
        <%= render partial: 'admin/trackers/tracker_list', collection: @trackers %>
      </table>
      <div class="pagination">
        <%= will_paginate @trackers, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>

  <div class="span3">
    <%= render partial: 'admin/shared/admin_menu' %>
  </div>

</div>
