<h2>Роли пользователей</h2>
<div class="row">
  <div class="span9">

    <div id="content-block">
      <div class="btn-group" id="right">
        <%= link_to 'Новая роль', new_admin_role_path, class: 'btn btn-success' %>
      </div>
      <table class="table table-hover">
        <tr><th>Роль</th><th></th></tr>
        <%= render partial: 'admin/roles/roles_list', collection: @roles %>
      </table>
      <div class="pagination">
        <%= will_paginate @roles, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>

  <div class="span3">
    <%= render partial: 'admin/shared/admin_menu' %>
  </div>

</div>
