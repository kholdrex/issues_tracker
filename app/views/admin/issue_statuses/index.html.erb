<h2><%= t(:issue_statuses) %></h2>
<div class="row">
  <div class="span9">

    <div id="content-block">
      <div class="btn-group" id="right">
        <%= link_to t(:create_issue_status), new_admin_issue_status_path, class: 'btn btn-success' %>
      </div>
      <table class="table table-hover">
        <tr><th><%= t(:name) %></th><th><%= t(:closed) %></th><th><%= t(:default_value) %></th><th></th></tr>
        <%= render partial: 'admin/issue_statuses/issue_status_list', collection: @issue_statuses %>
      </table>
      <div class="pagination">
        <%= will_paginate @issue_statuses, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>

  <div class="span3">
    <%= render partial: 'admin/shared/admin_menu' %>
  </div>

</div>
